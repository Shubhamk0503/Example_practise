- hosts: all
  tasks:
  - name: copying file with playbook
    become: true 
    copy:
      src:  /var/jenkins_home/workspace/Assignment/Single-Node-kubernetes-ansible/nginx_deployment/nginx_deployment.yml
      dest: /home/ec2-user/nginx_deployment.yml
      owner: ec2-user
      group: ec2-user      
      mode: 0644

  - name: Nginix Deployment
    become: true
    shell: "/usr/bin/kubectl --kubeconfig=/root/.kube/config apply -f /home/ec2-user/nginx_deployment.yml"

